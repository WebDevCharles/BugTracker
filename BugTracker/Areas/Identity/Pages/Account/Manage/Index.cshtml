@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    /*ViewData["ActivePage"] = ManageNavPages.Index;*/
}


<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <br />
            <div class="form-floating">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input type="file" asp-for="Input.AvatarFormFile" class="form-control-file" accept=".png,.jpg,.jpeg,.gif,.tif"
               onchange="document.getElementById('avatarFileData').src = window.URL.createObjectURL(this.files[0])" />
        <br />
        @if (Model.Input.AvatarData != null)
        {
            <img id="avatarFileData" class="img-fluid img-thumbnail rounded" width="450" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.AvatarData))">
        }
        else
        {
            <img id="avatarFileData" class="img-fluid img-thumbnail rounded" style="object-fit:cover" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png">
        }
        <br />
        <br />
        <button id="update-profile-button" type="submit" class="btn btn-md btn-primary">Save</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
