@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form class="form-horizontal form-material" id="account" method="post">
    <h3 class="box-title m-b-20">Request Password Reset</h3>
    <div class="form-group">
        <div class="col-xs-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
