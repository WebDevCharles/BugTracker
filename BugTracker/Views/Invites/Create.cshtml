@model BugTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="row mt-2">
    <div class="col-md-6 col-sm-12 info-color-box col-md-offset-3">
        <br />
        <br />
        <br />
        <br />
        <div class="white-box" style="border-radius:10px">
            <h3 class="card-title text-center"><b>Invite New Member</b></h3>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="InviteeEmail" class="control-label"></label>
                    <input asp-for="InviteeEmail" class="form-control" />
                    <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InviteeFirstName" class="control-label"></label>
                    <input asp-for="InviteeFirstName" class="form-control" />
                    <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InviteeLastName" class="control-label"></label>
                    <input asp-for="InviteeLastName" class="form-control" />
                    <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
